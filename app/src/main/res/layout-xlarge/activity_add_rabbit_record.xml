<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRabbitRecord">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.267">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rabbit_Record_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/rpic1"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="5dp" />

                <ImageView
                    android:id="@+id/addRecordImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignEnd="@id/rabbit_Record_image"
                    android:layout_alignRight="@id/rabbit_Record_image"
                    android:layout_alignBottom="@id/rabbit_Record_image"
                    android:layout_marginEnd="-18dp"
                    android:layout_marginRight="-18dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/addphoto" />


            </RelativeLayout>

            <EditText
                android:id="@+id/rabbit_Record_name"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Rabbit 0r Cage Number"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="25sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/rabbit_Record_FatherName"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:textSize="25sp"
                android:layout_height="100dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Father's Name 0r Cage Number"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/rabbit_Record_MotherName"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Mother's Name 0r Cage Number"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textStyle="italic" />


            <EditText
                android:id="@+id/rabbit_Record_Color"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Color"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="6dp"
                    android:text="Sex:"

                    android:textColor="@color/black"
                    android:textSize="24sp" />


                <Spinner
                    android:id="@+id/rabbit_Record_Sex"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="55dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="6dp"
                    android:text="Breed:"
                    android:textColor="@color/black"
                    android:textSize="24sp" />


                <Spinner
                    android:id="@+id/rabbit_Record_Breeds"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="34dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="1dp"
                    android:text="Purpose:"
                    android:textColor="@color/black"
                    android:textSize="24sp" />


                <Spinner
                    android:id="@+id/rabbit_Record_Purpose"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="6dp"
                    android:text="Origin:"
                    android:textColor="@color/black"
                    android:textSize="24sp" />


                <Spinner
                    android:id="@+id/rabbit_Record_Origin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="6dp"
                    android:text="Date of Birth:"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/rabbit_Record_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:hint="Select date"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="#070707"
                    android:textSize="24sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:padding="6dp"
                    android:text="Date Weaned:"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/rabbit_Record_Weaned"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Select date"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="#070707"
                    android:textSize="24sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <EditText
                android:id="@+id/rabbit_Record_Notes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="top"
                android:hint="General Notes About The Rabbit(Optional)"
                android:inputType="text|textMultiLine" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_rabbit_Record_Save"
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="70dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/button_background"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>