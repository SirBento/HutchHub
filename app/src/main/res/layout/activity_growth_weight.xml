<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrowthWeight">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background"
        tools:srcCompat="@drawable/top_background" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Rabbit Growth\nAnd Weight"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.0"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.267">

            <EditText
                android:id="@+id/GnW_RabbitName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Rabbit name or Cage number "
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/GnW_RabbitDOB"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Rabbit DOB"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/Gnw_View1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue" />

            <EditText
                android:id="@+id/GnW_FirstWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="First Weight(2kg)"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/GnW_FirstHeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="First Height(5cm)"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />


            <EditText
                android:id="@+id/GnW_FirstWeighingDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="First Weighing Date"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/Gnw_View2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue" />


            <EditText
                android:id="@+id/GnW_SecondWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Second Weight(3kg)"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/GnW_SecondHeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Second Height(7cm)"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/GnW_SecondWeighingDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Second Weighing Date"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/Gnw_View3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue" />

            <EditText
                android:id="@+id/GnW_ThirdWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Third Weight(4kg)"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/GnW_ThirdHeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Third Height(8cm)"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/GnW_ThirdWeighingDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Third Weighing Date"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#070707"
                android:textSize="18sp"
                android:textStyle="italic" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/GnW_Save"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/button_background"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>