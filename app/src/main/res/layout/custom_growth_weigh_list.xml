<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginTop="10dp"
    android:background="#E0F3FF" >


    <TextView
        android:id="@+id/GW_CustomRabbitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GW_CustomRabbitDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="DOB"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintTop_toBottomOf="@+id/GW_CustomRabbitName" />



    <LinearLayout
        android:id="@+id/firstInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="15dp"
        app:layout_constraintTop_toBottomOf="@+id/GW_CustomRabbitDOB">

        <TextView
            android:id="@+id/GW_CustomRabbitFirstDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Date"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="173dp" />

        <TextView
            android:id="@+id/GW_CustomRabbitFirstWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Weight"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="173dp" />

        <TextView
            android:id="@+id/GW_CustomRabbitFirstHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Height"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/GW_CustomRabbitFirstWeight"
            tools:layout_editor_absoluteX="173dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/firstInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="15dp"
        app:layout_constraintTop_toBottomOf="@+id/GW_CustomRabbitDOB">

        <TextView
            android:id="@+id/GW_CustomRabbitFirstDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Date"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="173dp" />

        <TextView
            android:id="@+id/GW_CustomRabbitFirstWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Weight"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="173dp" />

        <TextView
            android:id="@+id/GW_CustomRabbitFirstHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Height"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/GW_CustomRabbitFirstWeight"
            tools:layout_editor_absoluteX="173dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/firstInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="15dp"
        app:layout_constraintTop_toBottomOf="@+id/GW_CustomRabbitDOB">

        <TextView
            android:id="@+id/GW_CustomRabbitFirstDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Date"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="173dp" />

        <TextView
            android:id="@+id/GW_CustomRabbitFirstWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Weight"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="173dp" />

        <TextView
            android:id="@+id/GW_CustomRabbitFirstHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="First Height"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/GW_CustomRabbitFirstWeight"
            tools:layout_editor_absoluteX="173dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGW_CustomEdit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#8FCC00"
        android:gravity="center"
        android:text="Add More Info"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstInfoLayout"
        app:layout_constraintVertical_bias="0.733"
        tools:layout_editor_absoluteX="3dp" />


</androidx.constraintlayout.widget.ConstraintLayout>




