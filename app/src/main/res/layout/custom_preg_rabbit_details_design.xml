<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginTop="10dp"
    android:background="#E0F3FF" >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pregRabbitPic"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:src="@drawable/rpic5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pregRabbitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pregRabbitDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="DOB"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toBottomOf="@+id/pregRabbitName" />

    <TextView
        android:id="@+id/pregRabbitCrossDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Cross Date"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toBottomOf="@+id/pregRabbitDOB" />

    <TextView
        android:id="@+id/pregRabbitPalpatingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Palpating Date"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toBottomOf="@+id/pregRabbitCrossDate" />

    <TextView
        android:id="@+id/pregRabbitBreedingBoxDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Breeding Box"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toBottomOf="@+id/pregRabbitPalpatingDate" />

    <TextView
        android:id="@+id/pregRabbitKindlingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text=" Expected Kindling date"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toBottomOf="@+id/pregRabbitBreedingBoxDate" />

    <Button
        android:id="@+id/btnUpdatePregRabbitInfo"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="#8FCC00"
        android:gravity="center"
        android:text="Update"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toBottomOf="@+id/pregRabbitKindlingDate" />

    <Button
        android:id="@+id/btnDeletePregRabbitInfo"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="116dp"
        android:background="#A40D19"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Delete"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pregRabbitPic"
        app:layout_constraintTop_toBottomOf="@+id/pregRabbitKindlingDate"
        app:layout_constraintVertical_bias="0.423" />


</androidx.constraintlayout.widget.ConstraintLayout>




